<style>
  ul li.thumb img{
    max-width: 150px;
    max-height: 150px;
}
ul li.thumb figure {
    width: 150px;
    height: 150px;
    padding: 0px 0px 10px 0px;
    margin: 0;
}
ul li.thumb {
    text-align: center;
    list-style: none;
    float: left;
    width: 150px;
    min-height: 190px;
    height: 190px;
    margin: 10px;
    padding: 6px 8px;
    border: 1px solid #ccc;
}

figure.photo {
  margin: 0;
}

</style>
<nav class="breadcrumb">
<% for (var i=0; i<breadcrumb.length; i++) { %>

  <% if (i==breadcrumb.length-1){ %>
    <%= breadcrumb[i].name %>
  <% }else{ %>
    <a href="/<%= breadcrumb[i].url %>"> <%= breadcrumb[i].name %> &raquo; </a>
  <% } %>

<% } %>
</nav>

<h1 class="photo-title"><%= name %></h1>

<figure class="photo">
  <img src="<%= src %>?tn=0" alt="<%= name%>">
  <figcaption>
    <% if (exif && exif.Description){ %>
    <%= exif.Description%>
    <% }else{ %>
    <%= name%>
    <% } %>
  </figcaption>
</figure>



<% if (exif){ %>
<section class="info">
  <h2>Info</h2>
  <table>
    <% for (var key in exif){ %>
    <% if (key!="Description"){ %>
    <tr>
      <td>
        <%= key %>
      </td>
      <td>
        <%= exif[key] %>
      </td>
    </tr>
    <% } %>
    <% } %>
  </table>
</section>
<% } %>
