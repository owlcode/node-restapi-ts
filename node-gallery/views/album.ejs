<style>
ul li.thumb img{
    max-width: 150px;
    max-height: 150px;
}
ul li.thumb figure {
    width: 150px;
    height: 150px;
    padding: 0px 0px 10px 0px;
    margin: 0;
}
ul li.thumb {
    text-align: center;
    list-style: none;
    float: left;
    width: 150px;
    min-height: 190px;
    height: 190px;
    margin: 10px;
    padding: 6px 8px;
    border: 1px solid #ccc;
}

figure.photo {
  margin: 0;
}

</style>
<% if (!isRoot){ %>
  <nav class="breadcrumb">

  <% for (var i=0; i<breadcrumb.length; i++) { %>
  <% if (i==breadcrumb.length-1){ %>
  <%= breadcrumb[i].name %>
  <% }else{ %>
  <a href="/<%= breadcrumb[i].url %>"> <%= breadcrumb[i].name %> &raquo; </a>
  <% } %>
  <% } %>

  </nav>
<% } %>

<h1 class="album-title"><%= name %></h1>

<% if (albums.length>0){ %>
  <h2>Albums</h2>
  <ul class="albums">
    <% albums.forEach(function(album){ %>
      <li class="thumb">
        <a href="/<%= album.url %>">
          <figure>
            <img src="/<%= album.url %>?tn=1" alt="<%= album.name %>"/>
            <figcaption><%= album.name %></figcaption>
          </figure>
        </a>
      </li>
    <% }) %>
  </ul>
<% } %>

<% if (photos.length>0){ %>
  <h2>Photos</h2>
  <ul class="photos">
    <% photos.forEach(function(photo){ %>
      <li class="thumb">
        <a href="/<%= photo.url %>">
          <figure>
            <img src="/<%= photo.src %>?tn=1" alt="<%= photo.name %>"/>
            <figcaption><%= photo.name %></figcaption>
          </figure>
        </a>
      </li>
    <% }) %>
  </ul>
<% } %>
